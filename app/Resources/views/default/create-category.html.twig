{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="text-center">
                <div class="pad-top">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <form action="/create-category" method="post">
                            <div class="form-group has-feedback">
                                <label for="name" class="col-sm-3 control-label">Nom de la categorie</label>
                                <div class="col-sm-9 mg-bot">
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Nom catégorie">
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <div class="col-xs-8">
                                    {% for error in errors %}
                                        {% if error|length > 0 %}
                                            <p class="text-danger">{{ error }}</p>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="col-xs-4">
                                    <button type="submit" class="btn btn-primary btn-block btn-flat">Créer catégorie</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}