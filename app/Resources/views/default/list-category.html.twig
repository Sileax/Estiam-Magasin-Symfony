{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
    <div class="row"></div>
    <div class="text-center">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Liste de toutes les categories
                </h3>

            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th class="text-center">Nom</th>
                    </tr>
                    {% for category in categories %}
                        {% if category|length > 0 %}
                            <tr class="clickable">
                                <td>{{ category.name }}</td>
                                <input type="hidden" class="idElement" value="{{ category.id }}"/>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/redirect-category.js') }}"></script>
{% endblock %}